<%= form_with(model: @property , local: true) do |f| %>
  <% if @property.errors.any? %>
    <div id="error_explanation">
      <h2><%= @property.errors.count %>件のエラーがあります。</h2>
      <ul>

      <% @property.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
    <% end %>
    
    <div class="@property_name">
      <%= f.label :物件名 %>
      <%= f.text_field :property_name %>
    </div>
    <div class="property_rent">
      <%= f.label :賃料 %>
      <%= f.text_field :rent %>円
    </div>
    <div class="property_address">
      <%= f.label :住所 %>
      <%= f.text_field :address %>
    </div> 
    <div class="property_age">
      <%= f.label :築年数 %>
      <%= f.text_field :age %>年
    </div>
    <div class="property_remark">
      <%= f.label :備考 %>
      <%= f.text_field :remark %>
    </div>
    
    <% number = 0 %>
    <%= f.fields_for :nearest_stations do |s| %>
      <h2>最寄駅<%= number += 1 %></h2>
      <div>
        <%= s.label :路線名 %>
        <%= s.text_field :route_name %>
      </div>
      <div>
        <%= s.label :駅名 %>
        <%= s.text_field :station_name %>
      </div>
      <div>
        <%= s.label :徒歩分数 %>
        <%= s.text_field :on_foot_time %>分
      </div>
    <% end %>

    <%= f.submit "登録する" %>
<% end %>